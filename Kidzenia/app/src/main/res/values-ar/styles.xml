<resources>

    <!-- Base application theme. --> <!-- No Action Bar Theme. -->
    <style name="Theme.Kidzenia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>

        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Theme customization here. -->
        <item name="android:fontFamily">@font/uthman</item>
        <!-- <item name="android:background">@drawable/green_gradient_background</item> -->
    </style>

    <!-- Text Style -->
    <style name="textStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:letterSpacing">@dimen/text_letters_spacing</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <!-- Text Placeholders -->
    <style name="textStylePlaceholder">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:letterSpacing">@dimen/text_letters_spacing</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

</resources>