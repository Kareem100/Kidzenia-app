<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/transparent_background"
    android:gravity="center"
    android:orientation="horizontal">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/letters_numbers_gif"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_dimensions"
        android:layout_weight="1"
        tools:src="@drawable/number_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/animals_apples_gif"
            android:layout_width="@dimen/img_dimensions"
            android:layout_height="@dimen/img_dimensions"
            tools:src="@drawable/apple_1" />

        <TextView
            android:id="@+id/animals_apples_name"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_highlight"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            tools:text="TEST 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/img_dimensions"
            android:layout_height="@dimen/img_dimensions"
            tools:src="@drawable/play_button_anim" />

        <TextView
            style="@style/textStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:text="@string/pronounce"
            android:textColor="@color/colorTertiary"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>