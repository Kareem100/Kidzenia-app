<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/spinner_image_flag"
        android:layout_width="@dimen/spinner_view_dimensions"
        android:layout_height="@dimen/spinner_view_dimensions"
        android:layout_marginLeft="@dimen/small_spacing"
        android:src="@drawable/england_flag" />

    <TextView
        android:id="@+id/spinner_language"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_view_dimensions"
        android:layout_marginLeft="@dimen/medium_spacing"
        android:layout_toEndOf="@id/spinner_image_flag"
        android:gravity="center"
        android:src="@drawable/england_flag"
        android:text="@string/english" />

</RelativeLayout>