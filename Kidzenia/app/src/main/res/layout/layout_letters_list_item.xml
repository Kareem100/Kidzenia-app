<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/letters_list_item_height"
    android:layout_margin="@dimen/spacing_small"
    android:background="@drawable/transparent_bg_with_border"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/letters_numbers_gif"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_dimensions"
        android:layout_weight="1"
        tools:ignore="ContentDescription"
        tools:src="@drawable/number_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/animals_apples_gif"
            android:layout_width="@dimen/img_dimensions"
            android:layout_height="@dimen/img_dimensions"
            tools:ignore="ContentDescription"
            tools:src="@drawable/apple_1" />

        <TextView
            android:id="@+id/animals_apples_name"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_highlight"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:text="TEST 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/img_dimensions"
            android:layout_height="@dimen/img_dimensions"
            android:scaleType="center"
            android:src="@drawable/sound_icon_32"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/pronounce_text"
            style="@style/textStyle"
            android:layout_width="@dimen/img_dimensions"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:text="@string/pronounce"
            android:textColor="@color/colorTertiary"
            android:textSize="@dimen/text_size_default" />
    </LinearLayout>

</LinearLayout>