<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".VideosActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/transparent_background"
            android:src="@drawable/splash_logo" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/learn_anim" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/videos_english_letters_btn"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_background"
            android:text="English\nLetters"
            android:textSize="16sp" />

        <Button
            android:id="@+id/videos_english_numbers_btn"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="English\nNumbers"
            android:textSize="16sp" />

        <Button
            android:id="@+id/videos_arabic_letters_btn"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Arabic\nLetters"
            android:textSize="16sp" />

        <Button
            android:id="@+id/videos_arabic_numbers_btn"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Arabic\nNumbers"
            android:textSize="16sp" />

    </LinearLayout>

    <VideoView
        android:id="@+id/videos_video_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>